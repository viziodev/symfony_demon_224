{% extends 'base.html.twig' %}

{% block body %}
      <div class="container mt-5">
        
            <div class="card">
                <div class="card-header">Liste des Classes</div>
                <div class="card-body">
        <div class=" d-flex justify-content-end">
            <a
                name=""
                id=""
                class=" btn  btn-outline-dark"
                href="{{path("classe_store")}}"
                role="button"
                >Nouveau</a
            >
            
        </div>

          <div class=" mt-2   ">
                   {{form_start(formSearchClasse,{attr:{class:"d-flex"}})}}

                    <div class=" mr-2" style="width:30%">
                        {{form_widget(formSearchClasse.filiere)}}
                    </div>

                    <div class="mr-2 "  style="width:20%">
                           {{form_widget(formSearchClasse.niveau)}}
                    </div>
                  {{form_end(formSearchClasse)}}
          </div>


                        <div class="table-responsive">
            <table
                class="table  mt-2 table-bordered table-striped"
            >
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Niveau</th>
                        <th scope="col">Filiere</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for classe in classes %}
                    <tr class="">
                        <td scope="row">{{classe.id}}</td>
                        <td>{{classe.nom}}</td>
                        <td>{{classe.niveau.nom}}</td>
                        <td>{{classe.filiere}}</td>
                        <td>
                           <a
                            name=""
                            id=""
                            class="btn btn-outline-dark"
                            href="{{path('etudiant_classe_id',{id_client:classe.id})}}"
                            role="button"
                            >Etudiants</a
                           >
                           
                        </td>
                    </tr>
                 {% endfor %}   
                </tbody>
            </table>
              <nav aria-label="Page navigation ">
                <ul class="pagination  d-flex justify-content-end">
                  <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                      <span class="sr-only">Previous</span>
                    </a>
                  </li>
                   {% for page in 1..nbrePage %}
                      <li class="page-item  {{page==pageActive ? 'active' : ''}}"><a class="page-link" href="?page={{page}}">{{page}}</a></li>
                   {% endfor %}
                  <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                      <span class="sr-only">Next</span>
                    </a>
                  </li>
                </ul>
              </nav>
          </div>
                </div>
               
            </div>
            
          
      </div>
      
{% endblock %}
